# ================================================
# WasslChat Environment Configuration
# Copy this file to .env and fill in the values
# ================================================

# Application
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Database (PostgreSQL)
DATABASE_URL=postgresql://wasslchat:wasslchat@localhost:5432/wasslchat

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# WhatsApp (Evolution API)
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=your-evolution-api-key
EVOLUTION_WEBHOOK_SECRET=your-webhook-secret

# AI Services
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Egyptian Payment Gateways
# HealthPay
HEALTHPAY_API_URL=https://api.beta.healthpay.tech
HEALTHPAY_API_KEY=your-healthpay-api-key
HEALTHPAY_MERCHANT_ID=your-merchant-id
HEALTHPAY_WEBHOOK_SECRET=your-webhook-secret

# Fawry
FAWRY_BASE_URL=https://atfawry.fawrystaging.com
FAWRY_MERCHANT_CODE=your-merchant-code
FAWRY_SECURITY_KEY=your-security-key

# Vodafone Cash
VODAFONE_CASH_API_URL=https://api.vodafone.com.eg
VODAFONE_CASH_MERCHANT_ID=your-merchant-id
VODAFONE_CASH_API_KEY=your-api-key

# Egyptian Shipping
# WasslBox
WASSLBOX_API_URL=https://api.wasslbox.com
WASSLBOX_API_KEY=your-wasslbox-api-key
WASSLBOX_MERCHANT_ID=your-merchant-id

# Bosta
BOSTA_API_URL=https://app.bosta.co/api/v2
BOSTA_API_KEY=your-bosta-api-key

# E-commerce Integrations (per-tenant in database)
# WooCommerce - stored in tenant integration config
# Shopify - stored in tenant integration config

# Chatbot Integrations
TYPEBOT_API_URL=http://localhost:3001
TYPEBOT_API_TOKEN=your-typebot-token

N8N_API_URL=http://localhost:5678
N8N_API_KEY=your-n8n-api-key

# File Storage (Digital Ocean Spaces)
DO_SPACES_KEY=your-spaces-key
DO_SPACES_SECRET=your-spaces-secret
DO_SPACES_ENDPOINT=fra1.digitaloceanspaces.com
DO_SPACES_BUCKET=wasslchat-media
DO_SPACES_CDN_URL=https://cdn.wasslchat.com

# Email (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=WasslChat <noreply@wasslchat.com>

# Monitoring (Optional)
SENTRY_DSN=https://your-sentry-dsn
LOG_LEVEL=debug

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
