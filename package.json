{
  "name": "wasslchat",
  "version": "1.0.0",
  "private": true,
  "description": "WhatsApp-powered Commerce Platform for Egyptian Businesses",
  "keywords": ["whatsapp", "ecommerce", "egypt", "nestjs", "nextjs"],
  "license": "MIT",
  "author": "HealthFlow Group <dev@healthflow.tech>",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/wasslchat.git"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:api": "turbo dev --filter=@wasslchat/api",
    "dev:dashboard": "turbo dev --filter=@wasslchat/dashboard",
    "build": "turbo build",
    "build:api": "turbo build --filter=@wasslchat/api",
    "build:dashboard": "turbo build --filter=@wasslchat/dashboard",
    "start": "turbo start",
    "start:api": "turbo start --filter=@wasslchat/api",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:cov": "turbo test:cov",
    "test:e2e": "turbo test:e2e",
    "db:generate": "pnpm --filter @wasslchat/database db:generate",
    "db:migrate": "pnpm --filter @wasslchat/database db:migrate",
    "db:migrate:dev": "pnpm --filter @wasslchat/database db:migrate:dev",
    "db:seed": "pnpm --filter @wasslchat/database db:seed",
    "db:studio": "pnpm --filter @wasslchat/database db:studio",
    "db:reset": "pnpm --filter @wasslchat/database db:reset",
    "docker:build": "./infrastructure/scripts/deploy.sh build",
    "docker:push": "./infrastructure/scripts/deploy.sh build",
    "deploy:staging": "./infrastructure/scripts/deploy.sh full staging",
    "deploy:production": "./infrastructure/scripts/deploy.sh full production",
    "prepare": "husky install",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/node": "^20.10.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.2"
  },
  "packageManager": "pnpm@8.11.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
